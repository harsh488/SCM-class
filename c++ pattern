#include <iostream>

using namespace std;

int main()
{
    int n;
    cin >> n;
    int i = 1;
    while (i<=n){
        
        // print spaces (first triangle)
        int space = n - i;
        while(space){
            cout << " ";
            space = space - 1;
        }
        
        // print second triangle
        int j = 1;
        while(j<=i){
            cout << j;
            j = j + 1;
        }
        
        // print third triangle
        int k = i - 1;
        while(k){
            cout << k;
            k = k - 1;
        }
        cout << endl;
        i = i + 1;
    }
}

//Changes Made By collaborator
